{
  "name": "node-font2base64",
  "description": "Convert font to base64 url or src, and to inject src into style files",
  "version": "0.0.0-PLACEHOLDER",
  "author": "Junmin Ahn",
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    }
  },
  "keywords": [
    "base64",
    "dataurl",
    "font",
    "fontface",
    "encode",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/junminahn/node-font2base64.git"
  },
  "scripts": {
    "format": "git ls-files '*.js' '*.ts' | xargs prettier --write",
    "lint": "git ls-files '[!test]*.js' '[!test]*.ts' | xargs yarn eslint",
    "test": "mocha --exit",
    "build-cjs": "rimraf lib/cjs && tsc -p tsconfig.cjs.json -d",
    "build-esm": "rimraf lib/esm && tsc -p tsconfig.esm.json -d",
    "build": "yarn build-cjs && yarn build-esm"
  },
  "files": [
    "LICENSE",
    "HISTORY.md",
    "index.js",
    "helpers.js"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "css": "^3.0.0",
    "file-type": "^16.5.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/css": "^0.0.33",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.7",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^11.1.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "promise-synchronizer": "^3.0.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "yargs": "^17.6.0"
  },
  "peerDependencies": {
    "promise-synchronizer": "^3.0.0"
  },
  "mocha": {
    "extensions": [
      "ts"
    ],
    "spec": [
      "test/**/*.spec.ts"
    ],
    "require": "ts-node/register"
  }
}
